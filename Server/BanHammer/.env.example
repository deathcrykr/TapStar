# Legacy Database Configuration (기존 호환성용)
DATABASE_URL=sqlite:///./banhammer.db

# TimescaleDB Configuration (5천만명+ 대용량 처리)
TIMESCALEDB_URL=postgresql://banhammer_user:your_password@localhost:5432/banhammer_ts
# 예시: postgresql://banhammer:password123@timescale-server:5432/banhammer_production

# Redis Configuration (Optional but recommended)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# API Configuration
API_TITLE=BanHammer Anti-Cheat API
API_VERSION=1.0.0
DEBUG_MODE=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
RATE_LIMITING_ENABLED=true

# Anti-Cheat Parameters
BEHAVIOR_ANALYSIS_WINDOW=300
ANOMALY_THRESHOLD=2.5
AUTO_BAN_THRESHOLD=8.0
PERFECT_TIMING_THRESHOLD=0.05
IDENTICAL_SEQUENCES_THRESHOLD=5
CONTINUOUS_ACTIVITY_HOURS=3

# Logging
LOG_LEVEL=INFO
LOG_REQUESTS=true

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com